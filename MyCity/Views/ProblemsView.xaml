                </Grid.RowDefinitions>
                <Grid Background="#7ADBDB" Width="80" HorizontalAlignment="Center">
                    <materialDesign:PackIcon 
                        Grid.Column="1"
                        Kind="Home"
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Height="40"
                        Width="40"/>
                </Grid>
                <TextBlock 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Grid.Row="1"
                        FontSize="25"   
                        Text="YARD"
                        FontFamily="Champagne &amp; Limousines"  Grid.ColumnSpan="3"/>
            </Grid>
        </Button>
        
    </UniformGrid>
</UserControl>
